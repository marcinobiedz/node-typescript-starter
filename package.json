{
  "name": "typescript-starter",
  "version": "1.0.0",
  "description": "simple starter ts",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf -rf dist",
    "compile": "tsc",
    "start-server": "node ./dist/server.js",
    "start-ticker": "node ./dist/ticker.js",
    "watch-ts": "tsc -w",
    "watch-js-server": "nodemon ./dist/server.js",
    "watch-js-ticker": "nodemon ./dist/ticker.js",
    "debug": "concurrently -k \"npm:watch-*\"",
    "prod": "concurrently \"npm:start-*\"",
    "start": "npm run clean && npm run compile && npm run debug",
    "start:prod": "npm run clean && npm run compile && npm run prod"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marcinobiedz/node-typescript-starter.git"
  },
  "author": "https://github.com/marcinobiedz",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/marcinobiedz/node-typescript-starter/issues"
  },
  "homepage": "https://github.com/marcinobiedz/node-typescript-starter#readme",
  "dependencies": {
    "cron": "1.7.2",
    "mariadb": "^2.5.3",
    "concurrently": "^6.0.0",
    "node-fetch": "2.6.1",
    "ramda": "0.27.1",
    "rxjs": "6.6.7"
  },
  "devDependencies": {
    "@types/node-fetch": "2.5.8",
    "@types/ramda": "0.27.10",
    "@types/node": "^14.14.33",
    "@types/cron": "1.7.2",
    "husky": "=4",
    "lint-staged": "^10.5.4",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "typescript": "^4.2.3",
    "rimraf": "3.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,json,css,md}": "prettier --write"
  }
}
